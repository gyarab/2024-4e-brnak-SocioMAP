<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/default_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”¹ Archived Events (Attended) -->
        <TextView
            android:id="@+id/txt_archived_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archived Events You Attended"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <ListView
            android:id="@+id/list_archived_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Signed-up Events -->
        <TextView
            android:id="@+id/txt_signed_up_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signed-up Events"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/list_signed_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Created Events -->
        <TextView
            android:id="@+id/txt_created_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Created Events"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/list_created_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Archived Created Events -->
        <TextView
            android:id="@+id/txt_archived_created_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Archived Created Events"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <ListView
            android:id="@+id/list_archived_created_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Famous User Events (if needed in the future) -->
        <TextView
            android:id="@+id/txt_famous_user_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Famous User Events (Upcoming Feature)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="gone"/> <!-- Hidden for now, can be enabled later -->

        <ListView
            android:id="@+id/list_famous_user_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            android:visibility="gone"/> <!-- Hidden for now -->

    </LinearLayout>

</ScrollView>