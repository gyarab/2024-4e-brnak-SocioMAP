<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--  Search Users Button -->

        <!-- ðŸ”¹ Following (Signed-up Events) -->

        <Button
            android:id="@+id/btn_search_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="12dp"
            android:text="Search and Follow Users"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_following_signed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Following (Signed-up Events)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_following_signed"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Following (Created Events) -->
        <TextView
            android:id="@+id/txt_following_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following (Created Events)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/list_following_created"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</ScrollView>