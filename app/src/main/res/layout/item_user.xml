<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/glass_surface"
    android:elevation="2dp">

    <!-- User Info (Name + Username) -->
    <TextView
        android:id="@+id/txt_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="User Name (@username)"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <!-- Follow for Signed-Up Events -->
    <Button
        android:id="@+id/btn_follow_signed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorAccentDark"
        android:padding="6dp"
        android:text="Follow"
        android:textColor="@android:color/white" />

    <!-- Follow for Created Events -->
    <Button
        android:id="@+id/btn_follow_created"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccentDark"
        android:padding="6dp"
        android:text="Folloe Creater"
        android:textColor="@android:color/white" />
</LinearLayout>