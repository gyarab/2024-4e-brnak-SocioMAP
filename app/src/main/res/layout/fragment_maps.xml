<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".Main.Map.MapsFragment">

    <!-- Google Map Fragment -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Glassmorphic Floating Card for Filters -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="16dp"
        android:background="@drawable/glassmorphic_background"
        android:elevation="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

    </androidx.cardview.widget.CardView>

    <!-- Floating Calendar Filter Button (Top Right) -->

    <!-- Toggle Famous Markers FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_toggle_famous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_star_outline"
        app:backgroundTint="@color/colorAccent"
        android:tint="@color/black"
        android:elevation="10dp"/>

    <!-- Switch Mode Button (Map View â†” Edit Mode) -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_calendar_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:src="@drawable/ic_calendar"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toggle_mode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Switch to Edit Mode"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="30dp"
        android:elevation="8dp"/>

    <!-- Floating Action Button for Adding Markers -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        android:elevation="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text=""
            android:textColor="@color/text_primary_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Marker Filter Spinner -->
        <Spinner
            android:id="@+id/spn_filter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_spinner"
            android:padding="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout> <!-- Hidden by default, shown in Edit Mode -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>